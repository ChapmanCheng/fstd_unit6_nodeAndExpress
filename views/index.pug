extends layout.pug

block content 
	article.grid-container.portfolio-intro
		div

		h1 Welcome to my portfolio

		p.lead.text-light Hi, this is my portfolio page, built with Node and Express, along with pug as the template engine. 
		
	article.grid-container.portfolio-index
		
		.grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

		each project, index in projects
			.cell
				a(href=`/project/${index}`)
					img.thumbnail(src=`${project.image_urls.thumbnail}`)
					h5 #{project.project_name}